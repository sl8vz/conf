[user]
	email =
	name = Seb Laveze
[alias]
	lol = log --graph --decorate --pretty=oneline --abbrev-commit --all
	ls = log --stat
	ll = log --pretty=format:\"%C(Yellow)%h %<(10,trunc)%C(Green)%cr %<(10,trunc)%C(Cyan)%an %C(reset)%s %C(auto)%d\"
	l = log --pretty=format:\"%C(Yellow)%h %<(10,trunc)%C(Green)%cr %<(10,trunc)%C(Cyan)%an %C(reset)%s %C(auto)%d\" -20
	co = checkout
	ci = commit -s
	cia = commit --amend
	autosquash = rebase -i HEAD~12 --autosquash
	rb = rebase
	rbc = rebase --continue
	rba = rebase --abort
	rhh = reset HEAD --hard
	st = status
	cp = cherry-pick
[color]
	ui = auto
[web]
	browser = chromium
[diff "zip"]
	textconv = unzip -c -a
[gui]
	commitmsgwidth = 72
[core]
	excludesfile = /home/seb/.gitignore_global
	editor = vim
[merge]
	renameLimit = 40000
[clangFormat]
	binary = /usr/bin/clang-format-9
